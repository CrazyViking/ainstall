#!/bin/bash

#ARCHLINUX INSTALL SCRIPTS MODE

ping archlinux.org

pacman -Sy

loadkeys "us"

timedatectl set-ntp true

lsblk

echo enter which drive to format as ext4:
read drivePath
sleep 1s

mkfs.ext4 $drivePath

echo Mounting $drivePath
mount $drivePath /mnt

echo Installing base and base-devel
pacstrap /mnt base base-devel

echo Generating fstab
genfstab -U /mnt >> /mnt/etc/fstab

echo Chrooting into installation
echo Run aconfig inside the chroot environment to finish installation

mv ainstall /mnt
mv aconfig /mnt

arch-chroot /mnt
